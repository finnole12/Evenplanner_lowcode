<?xml version="1.0" encoding="UTF-8"?>
<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="eventsmanagement.controller.SurveyController">
    <Page showNavButton="false" navButtonPress="onNavBack">
        <headerContent>
            <Bar>
                <contentMiddle>
                    <Title text="{surveyModel>/title}" level="H1" class="sapUiMediumMargin" />
                </contentMiddle>
                <contentLeft>
                    <Text text="{surveyModel>/description}" class="sapUiSmallMargin" />
                </contentLeft>
                <contentRight>
                    <HBox class="sapUiSmallMargin">
                        <Text text="Due: {surveyModel>/dueDate}" class="sapUiSmallMarginEnd" />
                        <Text text="{= ${surveyModel>/isActive} ? 'Active' : 'Inactive' }" class="sapUiSmallMarginEnd" />
                    </HBox>
                </contentRight>
            </Bar>
        </headerContent>
        <content>
            <VBox class="sapUiMediumMargin" alignItems="Center" justifyContent="Center">
                <List items="{surveyModel>/questions}" class="sapUiMediumMargin">
                    <CustomListItem>
                        <VBox class="sapUiSmallMargin">
                            <Text text="{surveyModel>text}" class="sapUiMediumMarginBottom" wrapping="true" />
                            <VBox>
                                <RadioButtonGroup columns="1" selectedIndex="{surveyModel>selectedAnswer}" class="sapUiSmallMargin" buttons="{surveyModel>answers}" visible="{= !${surveyModel>isMultipleChoice} }" select="onSelectionChange">
                                    <RadioButton text="{surveyModel>text}" />
                                </RadioButtonGroup>
                                <List visible="{surveyModel>isMultipleChoice}" items="{surveyModel>answers}">
                                    <CustomListItem>
                                        <CheckBox text="{surveyModel>text}" selected="{surveyModel>selectedAnswers}" select="onSelectionChange" />
                                    </CustomListItem>
                                </List>
                            </VBox>
                        </VBox>
                    </CustomListItem>
                </List>
                <Button text="Submit" press="onSubmitSurvey" enabled="{surveyModel>/allQuestionsAnswered}" class="sapUiMediumMarginTop sapUiLargeMarginBottom" />

                <!-- Survey Results Section -->
                <VBox class="sapUiMediumMargin" alignItems="Center" justifyContent="Center">
                    <Title text="Survey Results" level="H2" class="sapUiMediumMarginTop" />

                    <!-- Table for Answer Percentages -->
                    <Table id="answerStatisticsTable" items="{resultsModel>/answerStatistics}">
                        <columns>
                            <Column>
                                <Text text="Question" />
                            </Column>
                            <Column>
                                <Text text="Answer" />
                            </Column>
                            <Column>
                                <Text text="Percentage" />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem type="Active">
                                <cells>
                                    <Text text="{resultsModel>questionText}" />
                                    <Text text="{resultsModel>answerText}" />
                                    <Text text="{resultsModel>percentage}" />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>

                    <!-- Table for User's Picked Answers -->
                    <Table items="{resultsModel>/userAnswers}">
                        <columns>
                            <Column>
                                <Text text="User" />
                            </Column>
                            <Column>
                                <Text text="Question" />
                            </Column>
                            <Column>
                                <Text text="Picked Answer" />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem>
                                <cells>
                                    <Text text="{resultsModel>userName}" />
                                    <Text text="{resultsModel>questionText}" />
                                    <Text text="{resultsModel>pickedAnswerText}" />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </VBox>
            </VBox>
        </content>
    </Page>
</mvc:View>